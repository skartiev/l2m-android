<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here.-->
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="AppThemeNoActionBar" parent="android:Theme.Holo.Light.NoActionBar">
        <!-- Customize your theme here.-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>



    <style name="look2meet.buttons" parent="android:Widget">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/buttons_xml</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">150dp</item>
    </style>


    <style name="GenericProgressBackground" parent="android:Theme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#DD111111</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="GenericProgressIndicator" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="look2meet.menu_layout" parent="android:Widget">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="look2meet.menu_table" parent="android:Widget">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:stretchColumns">*</item>
        <item name="android:collapseColumns">*</item>
        <item name="android:padding">0px</item>
    </style>

    <style name="look2meet.table_row" parent="android:Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="look2meet.center_button_layout" parent="android:Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="look2meet.menu_button" parent="android:Widget">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <!--<profiles_list_item name="android:layout_gravity">center_vertical</profiles_list_item>-->
    </style>
    

    <!--my_map-->
    <style name="look2meet.my_location_button" parent="android:Widget">
        <item name="android:background">@drawable/map_button_xml</item>
    </style>

    <style name="look2meet.map.objectInfo.checkins" parent="android:Widget.TextView">
        <item name="android:text">0</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="look2meet.top_bar_button" parent="android:Widget">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="look2meet.top_bar_caption" parent="android:Widget">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="look2meet.top_bar_button_disabled" parent="look2meet.top_bar_button">
        <item name="android:alpha">0.3</item>
    </style>

    <style name="look2meet.botom_bar_button_layout" parent="android:Widget">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="look2meet.bottom_bar_button_layout_disabled" parent="look2meet.botom_bar_button_layout">
        <item name="android:alpha">0.3</item>
    </style>

    <style name="look2meet.botom_bar_button_image" parent="android:Widget">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="look2meet.botom_bar_button_text" parent="android:Widget">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#77c5d7</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PopupWindowAnimation" parent="android:Animation" >
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

    <style name="BackgroundWhiteTheme" parent="android:Theme.Holo.Light">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Organization info activity styles -->
    <style name="look2meet.org_checkin_all_button" parent="android:Widget">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="look2meet.org_checkins_block_bottom_layout" parent="android:Widget">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="look2meet.org_checkins_block_bottom_button" parent="android:Widget">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#f1f4f6</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="look2meet.org_checkins_block_women_icon" parent="android:Widget">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:src">@drawable/women</item>
    </style>

    <style name="look2meet.org_checkins_block_men_icon" parent="android:Widget">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:src">@drawable/men</item>
    </style>

    <style name="look2meet.org_checkins_block_women_textview" parent="android:Widget">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">0</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#f03f66</item>
        <item name="android:layout_marginLeft">3dp</item>
    </style>

    <style name="look2meet.org_checkins_block_men_textview" parent="android:Widget">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">0</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#7fac40</item>
        <item name="android:layout_marginLeft">3dp</item>
    </style>

</resources>
