<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/image_gallery_frame"
    >

    <com.zuzex.look2meet.media.view.SquareImageView
        android:id="@+id/image_gallery_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/bar_button_remove2x"
        android:layout_gravity="right"
        android:layout_margin="30dp"
        android:id="@+id/image_gallery_delete_button"
        />

</FrameLayout>