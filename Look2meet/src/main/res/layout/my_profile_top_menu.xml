<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_menu"
    android:background="@drawable/top_bar"
    android:layout_height="60dp"
    android:layout_width="fill_parent"
    android:orientation="horizontal">

    <ImageButton
        style="@style/look2meet.top_bar_button"
        android:id="@+id/back_id"
        android:src="@drawable/bar_button_back2x"
        android:onClick="BackClicked"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.4"
        />

    <ImageButton
        style="@style/look2meet.top_bar_button"
        android:id="@+id/deleteMedia"
        android:src="@drawable/bar_button_photo2x"
        android:onClick="FavoritesClicked"
        />

    <ImageButton
        style="@style/look2meet.top_bar_button"
        android:id="@+id/captureMedia"
        android:src="@drawable/bar_button_video2x"
        android:onClick="openVideoActivity"
        />
</LinearLayout>
