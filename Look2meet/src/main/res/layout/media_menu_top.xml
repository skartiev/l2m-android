<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/top_menu"
android:background="@drawable/top_bar"
android:layout_height="60dp"
android:layout_width="fill_parent"
android:orientation="horizontal">

<ImageButton
    style="@style/look2meet.top_bar_button"
    android:id="@+id/back_id"
    android:src="@drawable/bar_button_back2x"
    android:onClick="backButtonClick"
    />

<LinearLayout
    android:layout_width="0dp"
    android:layout_height="fill_parent"
    android:layout_weight="0.4"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textViewMediaName"
        style="@style/look2meet.top_bar_caption" />
</LinearLayout>

<ImageButton
    style="@style/look2meet.top_bar_button"
    android:id="@+id/deleteMedia"
    android:src="@drawable/bar_button_remove2x"
    android:onClick="deleteMedia"
    />

<ImageButton
    style="@style/look2meet.top_bar_button"
    android:id="@+id/captureMedia"
    android:src="@drawable/bar_button_add2x"
    android:onClick="captureMedia"/>
    />
</LinearLayout>